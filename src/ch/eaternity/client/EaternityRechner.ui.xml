<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:rechner='urn:import:ch.eaternity.client'>
  
<ui:style>

	.Worksheet {
		margin: 10px 15px 15px 10px;
	}
	
	
	.WorksheetTable {
		margin-left:8px;
	}
	.topScores{
		margin-top:15px;
		padding: 0px 1px 10px 0px;
	}

	.gwt-Button {
	 float:right;
	  margin: 0px 10px 0px 0px;
	  padding: 3px 5px;
	  text-decoration: none;
	  font-size: small;
	  cursor: pointer;
	  cursor: hand;
	  background: url("hborder.png") repeat-x 0px -27px;
	  border: 1px outset #ccc;
	}
	.gwt-Button:active {
	  border: 1px inset #ccc;
	}
	.gwt-Button:hover {
	  border-color: #9cf #69e #69e #7af;
	}
	.gwt-Button[disabled] {
	  cursor: default;
	  color: #888;
	}
	.gwt-Button[disabled]:hover {
	  border: 1px outset #ccc;
	}
</ui:style>

<ui:style field='selectionStyle'
    type='ch.eaternity.client.EaternityRechner.SelectionStyle'>

  .selectedRezept {
    background: #F48F28;
  }

 
</ui:style>

  <g:DockLayoutPanel>
    <g:north size='74'>
      <rechner:TopPanel ui:field='topPanel' />
    </g:north>

    <g:center>
      <g:SplitLayoutPanel>
        <g:west size='260'>
          	<rechner:Search ui:field='search' />
        </g:west>
        <g:center>
        <g:DockLayoutPanel>
        		<g:north size='40'>
       			<!-- <g:north size='120'> -->
       			<g:HTMLPanel styleName='{style.Worksheet}' >
       			<!-- Add Rezept Button -->
       			<g:Button styleName='{style.gwt-Button}'  ui:field="addRezeptButton" text="Neues Rezept"/>
       			
       			Ihre Rezepte:
       			<!-- suggest bar -->
       			<!-- Im Vergleich: -->
       			<g:HorizontalPanel ui:field='suggestionPanel' styleName='{style.topScores}'>

       			</g:HorizontalPanel>
       			
       			</g:HTMLPanel>
       			</g:north>
       			<g:center>
       			<!-- List of Rezepte -->
       				<g:ScrollPanel >
						<g:FlexTable styleName='{style.WorksheetTable}' ui:field='rezeptList' cellSpacing='0' cellPadding='0'/>
					</g:ScrollPanel>
					
				</g:center>
        	</g:DockLayoutPanel>
        </g:center>


      </g:SplitLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>

</ui:UiBinder>
