<ui:UiBinder 
	xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:rechner='urn:import:ch.eaternity.client'>
<ui:style>
	.info {
	border-top: 1.5px solid #bbb;
	border-right: 1.5px solid #bbb;
	
	}
	.top {
	margin:15px 15px 0px 10px;
		}
	.box {
		margin:10px;
		}
	.scrollbox {
			border: 1.5px solid #bbe;
			margin: 0px 15px 0px 15px;
			background: #fff;
		}
		.hinweis{
			width:100%;
			background:#bbe;
			text-align:center;
			color:white;
			font-weight:bold;
			padding-right:10px;
			padding-top:3px;
			}
		

.menge{
	margin:0px 5px 10px 5px;
	}
	
</ui:style>

<ui:style field='passedStyle'
    type='ch.eaternity.client.InfoZutat.PassedStyle'>
	
		.hinweisPassed{
			width:100%;
			background:#ffa800;
			text-align:center;
			color:white;
			font-weight:bold;
			padding-right:10px;
			padding-top:3px;
			}
			
  </ui:style>


	<g:DockLayoutPanel ui:field="infoBox" styleName='{style.info}'>
		<g:north size='180'>
			<g:DockLayoutPanel styleName='{style.top}'>
				<g:north  size="110">
					<g:DockLayoutPanel >
						<g:east size="150">
							<g:HTMLPanel>
								<img src='http://upload.wikimedia.org/wikipedia/commons/1/1d/Speisefisch.roh.wmt.jpg' height='100' />
							</g:HTMLPanel>
						</g:east>
						<g:center>
							<g:DockLayoutPanel>
								<g:north size='80'>
									<g:HTML ui:field="zutatName">
										<h1>Zutat Name</h1>
									</g:HTML>
								</g:north>
								<g:center>
									<g:DockLayoutPanel>
										<g:west size="20">
											<g:HTMLPanel><b>pro </b></g:HTMLPanel>
										</g:west>
										<g:west  size="80">
											<g:TextBox ui:field="zutatMenge" styleName='{style.menge}'>100</g:TextBox>
											
										</g:west>
										<g:center>
											<g:HTMLPanel><b>g </b></g:HTMLPanel>
										</g:center>
										
									</g:DockLayoutPanel>
								</g:center>
							</g:DockLayoutPanel>
						</g:center>
					</g:DockLayoutPanel>
				</g:north>
				<g:south size="20">
					<g:DockLayoutPanel>
					<g:west size="100">
					<g:HTMLPanel>
						<ul class="rating onestar">
							<li class="one">
								<a href="#" title="1 Star">1</a>
							</li>
							<li class="two">
								<a href="#" title="2 Stars">2</a>
							</li>
							<li class="three">
								<a href="#" title="3 Stars">3</a>
							</li>
							<li class="four">
								<a href="#" title="4 Stars">4</a>
							</li>
							<li class="five">
								<a href="#" title="5 Stars">5</a>
							</li>
						</ul>
					</g:HTMLPanel>
					</g:west>
					<g:center><g:Label ui:field="hinweisPanel"  styleName='{style.hinweis}'>Die Angaben sind noch unvollständig</g:Label></g:center>
					</g:DockLayoutPanel>
				</g:south>
				<g:north size="28">

							<g:DecoratorPanel>
								<g:Label  ui:field="valueLabel" >300g CO2-Äquivalent</g:Label>
							</g:DecoratorPanel>

				</g:north>
				<g:center><g:HTMLPanel><hl /></g:HTMLPanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:north>

		<g:south size="80">
				
				
				<g:DockLayoutPanel  styleName='{style.box}'>
					<g:north size="30">
						<g:FlowPanel>
							<g:Hyperlink>Alternativen</g:Hyperlink>
							<g:Hyperlink>Quellen</g:Hyperlink>
						</g:FlowPanel>
					</g:north>
					<g:east size="200">
						<g:Button ui:field="addZutat">Zum Rezept hinzufügen</g:Button>
					</g:east>
					<g:center><g:HTMLPanel></g:HTMLPanel></g:center>
				</g:DockLayoutPanel>
		</g:south>

		<g:center>
			<g:ScrollPanel  styleName='{style.scrollbox}'>
				<rechner:ZutatVarianten ui:field="zutatVarianten" />
			</g:ScrollPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder>
