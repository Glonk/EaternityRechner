<!DOCTYPE ui:UiBinder 
  SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"
>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:mail='urn:import:ch.eaternity.client'>

	<ui:style>
		.searchLabel {
			padding-left: 6px;
		}
		
		.scrollLittle {
			height: 100px;
		}
		
		.someSpace {
			padding-bottom: 7px;
		}
		
		.inline {
			display: inline;
		}
		
		.legend {
			display: none;
			clear: both;
			width: 100%;
			text-wrap: none;
			word-wrap: none;
			white-space: nowrap;
		}
		
		.legendClose {
			float: right;
			padding: 0px 10px 3px 3px;
			margin-left: -100px;
		}
		
		.gwt-Button {
			margin: 5px 10px 5px 0px;
			padding: 2px 5px 3px 5px;
			text-decoration: none;
			/* cursor: pointer;
				  cursor: hand;*/
			cursor: default;
			font-size: 11px;
			color: #000;
			background: url("hborder.png") repeat-x 0px -27px;
			border: 1px solid #787878;
			/* border-bottom: 1px solid #a0a0a0;*/
			border-radius: 4px;
			-moz-border-radius: 4px;
		}
		
		.gwt-Button:active { /* border: 1px inset #fff; */
			border: 1px solid #787878;
			background: url("hborder.png") repeat-x 0px -1455px;
		}
		
		.gwt-Button:hover {
			border-color: #787878;
		}
		
		.gwt-Button[disabled] {
			cursor: default;
			color: #888;
		}
		
		.gwt-Button[disabled]:hover {
			border: 1px outset #ccc;
		}
		
		.outer {
			border-right: 1.5px solid #bbb;
			border-bottom: 1.5px solid #bbb;
			cursor: pointer;
			cursor: hand;
			background: #fff;
		}
		
		.searcher { /*
				  	border-top: 1.5px solid #bbb;
				  	border-right: 1.5px solid #bbb; 
				  	*/
			background: #F48F28;
			color: #555;
			margin-top: 24px;
		}
		
		.spacer {
			margin: 8px;
			padding-left: 4px;
		}
		
		.sortThing {
			border-top: 1.5px solid #bbb;
		}
		
		.table {
			table-layout: fixed;
			width: 100%;
			background: #fff;
			cursor: pointer;
			cursor: hand;
		}
		
		.table td { /*
				    border-top: 1px solid #fff;
				    border-bottom: 1px solid #ddd;
				    */
			padding: 2px 2px 2px 8px;
			margin: 0px;
			overflow: hidden;
		}
		
		.table tr:hover {
			background: #f3d3a3;
			background-image: url('add.png');
			background-repeat: no-repeat;
			background-position: right center;
		}
		
		.table2 {
			table-layout: fixed;
			width: 100%;
			background: #fff;
			cursor: pointer;
			cursor: hand;
		}
		
		.table2 td { /*
				    border-top: 1px solid #fff;
				    border-bottom: 1px solid #ddd;
				    */
			padding: 2px 2px 2px 8px;
			margin: 0px;
			overflow: hidden;
		}
		
		.table2 tr:hover {
			background: #f3d3a3;
			background-repeat: no-repeat;
			background-position: right center;
		}
		
		.scroll {
			background: #fff;
			margin-top: 1px;
			border-top: solid #bbb 1px;
		}
		
		.htmlbox {
			background: #fafafa;
		}
	</ui:style>

	<!-- marking row for potential selection -->
	<ui:style field='markingStyle'
		type='ch.eaternity.client.ui.SearchIngredients.MarkingStyle'>
			.markedRow {
				
			}
			
			.markedRow td {
				background: #f3d3a3;
				background-image: url('add.png');
				background-repeat: no-repeat;
				background-position: right center;
			}
		</ui:style>

	<!-- select row, adding to menu -->
	<ui:style field='selectionStyle'
		type='ch.eaternity.client.ui.SearchIngredients.SelectionStyle'>
			.selectedRow {
			}
			
			.selectedRow td {
				background: #adcce7;
			}
		</ui:style>


	<ui:style field='evenStyleRow'
		type='ch.eaternity.client.ui.SearchIngredients.EvenStyleRow'>
			.evenRow {
				background: #E8EAEA;
			}
		</ui:style>


	<g:DockLayoutPanel unit='EM'>

		<g:north size='5'>
			<g:DockLayoutPanel ui:field="SearchBox" styleName='{style.searcher}'
				unit='EM'>
				<g:west size='4'>
					<g:HTML ui:field="SearchLabel" styleName='{style.searchLabel}'>
						<p>Suche:</p>
					</g:HTML>
				</g:west>
				<g:center>
					<g:SuggestBox styleName='{style.spacer}' ui:field="SearchInput" />
				</g:center>
			</g:DockLayoutPanel>
		</g:north>

		<g:center>

			<g:DockLayoutPanel ui:field="displayResultsPanel">
			
				<g:center>
					<g:VerticalPanel>
						<g:HTMLPanel>
						<p style='white-space: nowrap; overflow:hidden;'>
							<g:Anchor href='javascript:;' ui:field='saisonOrder'>S</g:Anchor>
							<g:Anchor href='javascript:;' ui:field='alphOrder'>Zutat</g:Anchor>
							&nbsp;
							<g:Anchor href='javascript:;' ui:field='co2Order'>CO₂</g:Anchor>
						</p>
						</g:HTMLPanel>
						<g:ScrollPanel styleName='{style.scroll}'>
								<!-- Here is the Table for displaying the results of the ingredients -->
								<g:FlexTable ui:field='table' styleName='{style.table}'
									cellSpacing='0' cellPadding='0' />
						</g:ScrollPanel>
					</g:VerticalPanel>
				</g:center>

				<g:south size="80">
					<g:HTMLPanel ui:field="panelSouth" styleName='{style.sortThing}'>
						
						<g:HTMLPanel ui:field="legendPanel" styleName='{style.legend}'>
							<g:Anchor href='javascript:;' styleName='{style.legendClose}'
								ui:field='legendAnchorClose'>x</g:Anchor>
							<img style='float:left;margin-left:3px;' height='155' src='icons-3.png' />
							<div
								style='height: 180px;width:300px;line-height: 25px;padding: 9px 0px 5px 0px;'>
								ausgezeichnet klimafreundlich
								<br />
								CO₂Äq-Wert unter den besten 20%
								<br />
								CO₂Äq-Wert überdurchschnittlich gut
								<br />
								Angaben unvollständig
								<br />
								saisonale und regionale Ware
								<br />
								biologische Zutat / Rezept
								<br />
							</div>
						</g:HTMLPanel>
						&nbsp;&nbsp;
						<g:Anchor href='javascript:;' ui:field='legendAnchor'>Legende</g:Anchor>
						<div
							style='float:right;margin: -4px 4px 0px 0px;padding: 0px 0px 8px 0px;'
							class='base-icons baseCarrot'>
							<g:Image ui:field="imageCarrot" />
							<div class='extra-icon smiley1'>
								<g:Image ui:field="imageSmiley1" />
							</div>
							<div class='extra-icon smiley2'>
								<g:Image ui:field="imageSmiley2" />
							</div>
							<div class='extra-icon smiley3'>
								<g:Image ui:field="imageSmiley3" />
							</div>
							<div class='extra-icon regloc'>
								<g:Image ui:field="imageRegloc" />
							</div>
							<div class='extra-icon bio'>
								<g:Image ui:field="imageBio" />
							</div>
						</div>
					</g:HTMLPanel>
				</g:south>
			</g:DockLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
