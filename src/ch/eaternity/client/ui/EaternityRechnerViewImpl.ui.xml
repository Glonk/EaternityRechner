<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:rechner='urn:import:ch.eaternity.client'>
  
<ui:style>

	.Worksheet {
		/* 
		margin: 10px 15px 15px 10px;
		*/
		
		margin: 10px 15px 0px 4px;
		padding:4px;
		width:765px;

		background: #7CC158; 
		
		/* height:142px; */
		height:22px;
		position: absolute !important;
		bottom: -120px !important; 
		z-index:10 !important;
		
	}
	
	
	.noOverflow {
		margin-top:11px;
		height:0px; 
		bottom:0px;
		overflow:hidden;
		position:relative;
		}
	
	.WorksheetTable {
		margin-left:8px;
	}
	
	.WorksheetEditTable {
		margin-left:4px;
		padding:0px 4px 4px 4px;
		background: #7CC158; 
		width:773px;
	}
	
	.topScores{
		margin-top:15px;
		padding: 0px 1px 10px 0px;
	}

	.SuggestTable {

		float: left;
		clear: both;
		text-align: left;
		background: #323533;
		color: #fff;

	}
	.MenuTableWrapper {
		background:#F9C88C;
		margin: 15px 15px 0px 10px;
	}
	.MenuTable {
		width:360px;
	    cursor: pointer;
    	cursor: hand;
  
	}
	.MenuTable tr{
	 
	}
		.hideOverflow {
		/* overflow:hidden;
		padding-top:10px; 
		vertical-align: bottom;
		*/
		
		position:absolute;
		bottom:4px;

	}
	.rezeptDecoration {
		width:750px;
		padding: 7px;
	
		
	}
	.cookingInstr {
		float:left;
		margin-left:6px;
		height:124px;
		width:168px;
		display:inline;
		margin-top:2px;
		margin-bottom:4px;
		resize: none;
		
	}
	.menuDecoPanel {
		width:340px;
	}
	
	.gwt-Button {
	 float:right;
	  margin: 0px 10px 0px 0px;
	 padding: 2px 5px 3px 5px;
  text-decoration: none;
 /* cursor: pointer;
  cursor: hand;*/
  cursor: default;
  font-size:11px;
  color:#000;
  background: url("hborder.png") repeat-x 0px -27px;
  border:1px solid #787878;
  /* border-bottom: 1px solid #a0a0a0;*/
  border-radius: 4px;
 -moz-border-radius: 4px;
}
.gwt-Button:active {
 /* border: 1px inset #fff; */
 border:1px solid #787878;
    background: url("hborder.png") repeat-x 0px -1455px;
}
.gwt-Button:hover {
  border-color: #787878; 
}
.gwt-Button[disabled] {
  cursor: default;
  color: #888;
}
.gwt-Button[disabled]:hover {
  border: 1px outset #ccc;
}

.inline {
	display:inline;
}
.indikator {
	background:#fff;
	clear:both;
}

.cloneStyle {
overflow:hidden;
margin-top:12px;
padding-left:7px;
height: 100px;
background: #F7A959;
position:relative;
}

.relativePosition {
	
	/* this is a hack... what would you do? */
	position:absolute !important;
	bottom:4px;
	background: #F7A959; 
	overflow:hidden;
	padding-right:1px;
	
	}

</ui:style>

<ui:style field='selectionStyle'
    type='ch.eaternity.client.ui.EaternityRechnerViewImpl.SelectionStyle'>

  .selectedRezept {
    background: #F48F28 !important;
  }

 
</ui:style>

