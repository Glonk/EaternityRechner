			 xmlns:rechner='urn:import:ch.eaternity.client'
			 xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
	.background {
		/* background-color: #f1f1f1; */

	}
	.main {
	
		padding:30px;
		margin-top: 50px;
		margin-bottom: 50px;
		
		/* width:500px;
