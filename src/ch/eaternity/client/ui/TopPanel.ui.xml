<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE ui:UiBinder 
  SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"
>

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:mail='urn:import:ch.eaternity.client'
	xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
	xmlns:b2="urn:import:com.github.gwtbootstrap.datepicker.client.ui">


	<ui:style>
	.logo {
		padding-left:20px;
		margin-right:-20px
	}
	
	.spinnerHeight {
	  height:30px;
	}
	
	.adminDiv {
	float:right;
	}
	
	img .anchorImages { 
		margin: 0px 6px;
	}
	
	img:hover .anchorImages { 
		cursor: pointer;
	}
	

	.iconsPanel {
		margin-bottom:20px; 
		text-align:rigth;
		float:right;
	}

	.inline {
	display: inline
	}



	.statusInfo {
	padding:0em 0em 0em 1em;
	float: right;
	text-align: right;
	}
	
	.spinnerPanel {
		margin-left:20px;
		margin-right:20px;
	}
	
	.spinnerLabel {
		color:darkgray;
		/* margin-left:10px; */
	}
	.recipePlace {
		/*margin-right:-20px;*/
		position:relative;
		bottom:-12px;
		right:-20px;
	}

  </ui:style>
  
  <ui:style field='selectedRecipeScopeStyle'
		type='ch.eaternity.client.ui.TopPanel.SelectedRecipeScopeStyle'>
			.selectedRecipeScopeMarking{
				background-color: #A7B424; !important;
			}
	</ui:style>

	<ui:with field='res' type='ch.eaternity.client.resources.Resources'/>

	<g:HTMLPanel>
		<header>
			<b:Row>
				<b:Column size="2">
					<g:HTMLPanel styleName="{style.logo}">
		
						<img class="logo" src="images/logo-eaternity-small_04-11-2010.png" />
		
					</g:HTMLPanel>
				</b:Column>
				<b:Column size="8" offset="2">
					<b:Row>
						<b:Column size="5" offset="3" styleName="{style.iconsPanel}">
							<g:MenuBar ui:field='adminMenuBar'></g:MenuBar>
							<b:Tooltip placement="BOTTOM" text='Das Datum an dem Sie kochen'><g:Image ui:field='calendarImage' resource='{res.calendar}' styleName="{style.anchorImages}"></g:Image></b:Tooltip>
							<b2:DateBox format="dd/mm/yyyy" autoClose="true" ui:field='dateBox'/>
			
							<b:Tooltip placement="BOTTOM" text='Feedback an Eaternity senden'><g:Image ui:field='contactImage' resource='{res.contact}' styleName="{style.anchorImages}"></g:Image></b:Tooltip>
							<b:Tooltip placement="BOTTOM" text='Abmelden'><g:Image ui:field='signOutImage' resource='{res.logout}' styleName="{style.anchorImages}"></g:Image></b:Tooltip>
						</b:Column>
					</b:Row>
							

					<b:Row>
						<b:Column size="3">
							<g:HorizontalPanel ui:field='spinnerColumn' styleName="{style.spinnerHeight}">
								<g:HTML ui:field="spinnerHTML"></g:HTML>
								<g:Label ui:field="spinnerLabel" styleName="{style.spinnerLabel}"></g:Label>
							</g:HorizontalPanel>
						</b:Column>
						<b:Column size="5" offset="3" styleName="{style.recipePlace}">
							<g:MenuBar ui:field='recipesMenuBar' ></g:MenuBar>
						</b:Column>
					
					</b:Row>
				</b:Column>
			</b:Row>
		</header>
	</g:HTMLPanel>
</ui:UiBinder>
