<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE ui:UiBinder 
  SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"
>

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:mail='urn:import:ch.eaternity.client'
	xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
	xmlns:b2='urn:import:com.github.gwtbootstrap.datepicker.client.ui'>


	<ui:style>
	/*
	@eval edarkgreen ch.eaternity.client.resources.Resources.INSTANCE.constants().edarkgreen();
	@eval elightgreen ch.eaternity.client.resources.Resources.INSTANCE.constants().elightgreen();
	@eval etextblack ch.eaternity.client.resources.Resources.INSTANCE.constants().etextblack();
	test
	*/
	.logo {
		padding-left:20px;
		margin-right:-20px;
	}
	
	.spinnerHeight {
	  height:30px;
	}

	
	.adminMenuBar {
		float:left;
	}
	
	img.anchorImages { 
		margin: 0px 6px;
		float:right;
	}
	
	img:hover.anchorImages { 
		cursor: pointer;
	}
	

	.iconsPanel {
		margin-bottom:20px; 
		text-align:rigth;
		float:right;
	}



	.statusInfo {
	padding:0em 0em 0em 1em;
	float: right;
	text-align: right;
	}
	
	.spinnerPanel {
		margin-left:20px;
		margin-right:20px;
	}
	
	.spinnerLabel {
		color:darkgray;
		margin-left:10px;
	}
	.recipePlace {

	}
	
	.recipesMenuBox {
		position:relative;
		bottom:-7px;
		right:-16px;
		float:right;
	}
	
	
</ui:style>

	<ui:with field='res' type='ch.eaternity.client.resources.Resources' />

	<ui:style field='selectedRecipeScopeStyle' type='ch.eaternity.client.ui.TopPanel.SelectedRecipeScopeStyle'>
			.selectedRecipeScopeMarking {
				background: url(images/h_menu_active.png) repeat-x !important;
				border-bottom-style: none !important;
			}
	</ui:style>

	

	<g:HTMLPanel>
		<header>
			<b:Row>
				<b:Column size="2">
					<g:HTMLPanel styleName='{style.logo}'>
		
						<img class="logo" src="images/logo-eaternity-small_04-11-2010.png" />
		
					</g:HTMLPanel>
				</b:Column>
				<b:Column size="8" offset="2">
					<b:Row>
						<b:Column size="5" offset="3" styleName='{style.iconsPanel}'>
							<g:MenuBar ui:field='adminMenuBar' addStyleNames='{style.adminMenuBar}'/>
							<b:Tooltip placement="BOTTOM" text='Abmelden'><g:Image ui:field='signOutImage' resource='{res.logout}' styleName='{style.anchorImages}'/></b:Tooltip>
							<b:Tooltip placement="BOTTOM" text='Das Datum an dem Sie kochen'><g:Image ui:field='calendarImage' resource='{res.calendar}' styleName='{style.anchorImages}'/></b:Tooltip>
							<b2:DateBox format="dd/mm/yyyy" autoClose="true" ui:field='dateBox'/>
			
							<b:Tooltip placement="BOTTOM" text='Feedback an Eaternity senden'><g:Image ui:field='contactImage' resource='{res.contact}' styleName='{style.anchorImages}'/></b:Tooltip>
						</b:Column>
					</b:Row>
							

					<b:Row>
						<b:Column size="3">
							<g:HorizontalPanel ui:field='spinnerColumn' styleName='{style.spinnerHeight}'>
								<g:HTML ui:field="spinnerHTML"/>
								<g:Label ui:field="spinnerLabel" styleName='{style.spinnerLabel}' />
							</g:HorizontalPanel>
						</b:Column>
						<b:Column size="5" offset="3" styleName='{style.recipePlace}'>
							<g:HTMLPanel styleName='{style.recipesMenuBox}'>
								<g:MenuBar ui:field='recipesMenuBar' />
							</g:HTMLPanel>
						</b:Column>
					
					</b:Row>
				</b:Column>
			</b:Row>
		</header>
	</g:HTMLPanel>
</ui:UiBinder>
