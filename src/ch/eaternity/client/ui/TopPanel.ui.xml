<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE ui:UiBinder 
  SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"
>

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:mail='urn:import:ch.eaternity.client'
	xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>


	<ui:style>
	.adminDiv {
	float:right;

	}
	
	.statusDiv {
	text-align:right;
	padding:6px 8px 8px 10px;
	/*
	background:#fff;
	 background: url("header_rechner.jpg") no-repeat 0px 0px; 
	border-bottom: 2.5px solid #bbb;
	*/
	height:58px;
	vertical-align:bottom;
	}

	.inline {
	display: inline
	}



	.statusInfo {
	padding:0em 0em 0em 1em;
	float: right;
	text-align: right;
	}
	
	.spinnerPanel {
		margin-left:20px;
		margin-right:20px;
	}
	
	.spinnerLabel {
		color:darkgray;
		margin-left:10px;
	}

  </ui:style>
  
  <ui:style field='selectedRecipeScopeStyle'
		type='ch.eaternity.client.ui.TopPanel.SelectedRecipeScopeStyle'>
			.selectedRecipeScopeMarking{
				background-color: #A7B424; !important;
			}
	</ui:style>

	<ui:with field='res' type='ch.eaternity.client.resources.Resources'/>

	<g:HTMLPanel>
		
		<div class="{style.statusDiv}">
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<g:MenuBar ui:field='adminMenuBar'></g:MenuBar>

					<g:Image resource='{res.calendar}'></g:Image>
					<g:ListBox ui:field="Monate" />
	
					<g:Image resource='{res.contact}'></g:Image>
					<g:Image ui:field='signOutImage'></g:Image>
				</g:HorizontalPanel>
				
				<g:HorizontalPanel>
					<g:HorizontalPanel ui:field="spinnerPanel" styleName="{style.spinnerPanel}">
						<g:HTML ui:field="spinnerHTML"></g:HTML>
						<g:Label ui:field="spinnerLabel" styleName="{style.spinnerLabel}"></g:Label>
					</g:HorizontalPanel>
					<!--  
					<b:Button ui:field="userRecipesButton">Meine Rezepte</b:Button>
					<b:Button ui:field="kitchenRecipesButton">Küchen</b:Button>
					<b:Button ui:field="publicRecipesButton">Öffentliche Rezepte</b:Button>
					-->
					<g:MenuBar ui:field='recipesMenuBar'></g:MenuBar>
				</g:HorizontalPanel>
			
			</g:VerticalPanel>
		</div>
		
	</g:HTMLPanel>
</ui:UiBinder>
