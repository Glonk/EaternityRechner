<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE ui:UiBinder 
  SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"
>

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:mail='urn:import:ch.eaternity.client'
	xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>


	<ui:style>
	.adminDiv {
	float:right;

	}
	
	.gwt-Image { 
		margin-left:20px;
	}
	
	.gwt-Image img:hover { 
		cursor: pointer;
	}
	

	.iconsPanel {
		margin-bottom:30px;
		text-align:rigth;
	}

	.inline {
	display: inline
	}



	.statusInfo {
	padding:0em 0em 0em 1em;
	float: right;
	text-align: right;
	}
	
	.spinnerPanel {
		margin-left:20px;
		margin-right:20px;
	}
	
	.spinnerLabel {
		color:darkgray;
		margin-left:10px;
	}

  </ui:style>
  
  <ui:style field='selectedRecipeScopeStyle'
		type='ch.eaternity.client.ui.TopPanel.SelectedRecipeScopeStyle'>
			.selectedRecipeScopeMarking{
				background-color: #A7B424; !important;
			}
	</ui:style>

	<ui:with field='res' type='ch.eaternity.client.resources.Resources'/>

	<g:HTMLPanel>
		<b:Column size="2">
			<g:HTMLPanel>
				<a href="http://www.eaternity.ch">
				<img class="logo" src="http://dl.dropbox.com/u/1214503/eaternity-assets/images/generic/logo-eaternity-small_04-11-2010.png" />
				</a>
			</g:HTMLPanel>
		</b:Column>
		<b:Column size="7" offset="3">
			<b:Row>
				<b:Column size="2">
					<g:MenuBar ui:field='adminMenuBar'></g:MenuBar>
				</b:Column>
				<b:Column size="4" offset="1" styleName="{style.iconsPanel}">
					<b:Tooltip text='Der Monat in dem Sie kochen'><g:Image ui:field='calendarImage' resource='{res.calendar}'></g:Image></b:Tooltip>
					<g:ListBox width='100' ui:field="monthListBox" />
	
					<b:Tooltip text='Feedback an Eaternity senden'><g:Image ui:field='contactImage' resource='{res.contact}'></g:Image></b:Tooltip>
					<b:Tooltip text='Abmelden'><g:Image ui:field='signOutImage' resource='{res.logout}'></g:Image></b:Tooltip>
				</b:Column>
			</b:Row>
			<b:Row>	
				<b:Column size="2"  ui:field='spinnerColumn'>
					<g:HorizontalPanel>
						<g:HTML ui:field="spinnerHTML"></g:HTML>
						<g:Label ui:field="spinnerLabel" styleName="{style.spinnerLabel}"></g:Label>
					</g:HorizontalPanel>
				</b:Column>
				<b:Column size="5">
					<g:MenuBar ui:field='recipesMenuBar'></g:MenuBar>
				</b:Column>
			
			</b:Row>
		</b:Column>
		
	</g:HTMLPanel>
</ui:UiBinder>
