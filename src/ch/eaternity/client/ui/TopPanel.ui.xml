<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE ui:UiBinder 
  SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"
>

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:mail='urn:import:ch.eaternity.client'
	xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>


	<ui:style>
	.adminDiv {
	float:right;

	}
	
	.statusDiv {
	text-align:right;
	padding:6px 8px 8px 10px;
	/*
	background:#fff;
	 background: url("header_rechner.jpg") no-repeat 0px 0px; 
	border-bottom: 2.5px solid #bbb;
	*/
	height:58px;
	vertical-align:bottom;
	}

	.inline {
	display: inline
	}



	.statusInfo {
	padding:0em 0em 0em 1em;
	float: right;
	text-align: right;
	}
	
	.spinnerPanel {
		margin-left:20px;
		margin-right:20px;
	}
	
	.spinnerLabel {
		color:darkgray;
		margin-left:10px;
	}

  </ui:style>


	<g:HTMLPanel>
		
		<div class="{style.statusDiv}">
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<g:Anchor href='javascript:;' ui:field='ingredientLink'>Zutaten Konsole</g:Anchor>

					<g:HTML ui:field='calHTML' styleName="{style.inline}"><img src="calendar.png" height='24' /></g:HTML>
					<g:ListBox ui:field="Monate" />
	
					<g:HTML><a href="mailto:info@eaternity.ch"> Kontakt </a></g:HTML>
					<g:Anchor href='javascript:;' ui:field='signOutLink'> Abmelden </g:Anchor>
					<g:Anchor href='javascript:;' ui:field='signInLink'> Anmelden </g:Anchor>
				</g:HorizontalPanel>
				
				<g:HorizontalPanel>
					<g:HorizontalPanel ui:field="spinnerPanel" styleName="{style.spinnerPanel}">
						<g:HTML ui:field="spinnerHTML"></g:HTML>
						<g:Label ui:field="spinnerLabel" styleName="{style.spinnerLabel}"></g:Label>
					</g:HorizontalPanel>
					<b:Button ui:field="userRecipesButton">Meine Rezepte</b:Button>
					<b:Button ui:field="kitchenRecipesButton">Kuechen</b:Button>
					<b:Button ui:field="publicRecipesButton">Offentliche Rezepte</b:Button>
				</g:HorizontalPanel>
			
			</g:VerticalPanel>
		</div>
		
	</g:HTMLPanel>
</ui:UiBinder>
