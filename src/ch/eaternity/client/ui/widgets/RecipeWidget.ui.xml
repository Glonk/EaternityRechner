	<ui:style>
  	.wrapper {
		background-color:#ebebeb;
		margin-bottom:5px;
		padding:5px;
		width:700px;
	}
	.title {
		font-size:20px;
		font-weight:bold;
	}
	.subtitle {
		font-size:14px;
	}
	.recipeRating {

	}
	.rightBox {
		position:relative;
		right:10px;
		margin-left:10px;
	}
	.co2 {
		font-size:30px;
		font-weight:bold;
		margin-right:5px;
		float:left;
	}
	.unit {
		font-size:16px;
		font-weight:bold;
		position:relative;
		bottom:0px;
	}

	.deleteButton {

	}
  </ui:style>

	<g:HorizontalPanel styleName='{style.wrapper}'>
		<g:HTML ui:field='recipeImage'></g:HTML>
		<g:VerticalPanel>
			<g:Label ui:field='recipeTitle' styleName='{style.title}'></g:Label>
			<g:Label ui:field='recipeSubTitle' styleName='{style.subtitle}'></g:Label>
		</g:VerticalPanel>
		<g:HTMLPanel styleName='{style.rightBox}'>
			<div style='float:left;'>
				<g:HTML ui:field='recipeRating' styleName='{style.recipeRating}'></g:HTML>
			</div>
			
			<div style=''>
