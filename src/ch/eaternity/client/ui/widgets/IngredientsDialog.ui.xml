<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:mail='urn:import:ch.eaternity.client'
  xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>



  <ui:style>
  .panel {
    padding: 10px;
 	}

  .aboutText {
    text-align: left;
  }

  .buttons {
    text-align: right;
  }
  </ui:style>

  <g:HTMLPanel width='400px' styleName='{style.panel}'>
    <g:Label ui:field='statusLabel' >add those ingredients</g:Label>
	<g:TextArea ui:field='xmlText' ></g:TextArea>
    <div class='{style.buttons}'>
      <b:Button text='Add' ui:field='executeButton' />
      <b:Button text='Cancel' ui:field='closeButton' />
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
