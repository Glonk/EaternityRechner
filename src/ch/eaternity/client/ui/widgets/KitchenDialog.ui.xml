<ui:UiBinder 
	xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:c='urn:import:com.google.gwt.user.cellview.client' 
	xmlns:mail='urn:import:ch.eaternity.client'
	xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>



	<ui:style>
	.cellTable {
      border-bottom: 1px solid #ccc;
      text-align: left;
      margin-bottom: 4px;
    }
		.panel {
		padding: 10px;
		}

		.aboutText {
		text-align: left;
		}

		.buttons {

		text-align: right;
		}
		
		.buttonPerson {
		float: right;
		margin-right:15px;
		text-align: left;
		}
		
		.buttonDevice {
		float: right;
		margin-right:15px;
		text-align: right;
		}
		
		.buttonDelete {
			float: right;
			margin-right:15px;
			text-align: right;
			color:red;
		}
		
		.TextBox {
			width:150px;
		}
		
		
  </ui:style>
  
  <ui:style field='textErrorStyle'
		type='ch.eaternity.client.ui.widgets.KitchenDialog.TextErrorStyle'>
			.redTextError {
				color: red !important;
			}
	</ui:style>

	<g:HTMLPanel width='680px' styleName='{style.panel}'>
	
		<g:ListBox ui:field="kitchenList" />
	
		<hr />
		
		<g:ScrollPanel ui:field="scrollPanel">
			<g:HTMLPanel>
		
			<g:InlineLabel ui:field='kitchenLabel' >Name der Küche: </g:InlineLabel>
			<g:TextBox ui:field="kitchenNameTextBox">neue Küche</g:TextBox>
			<br />
			<g:InlineLabel ui:field='locationLabel' >Ort der Küche: </g:InlineLabel>
			<b:Button ui:field="locationButton" text="Adresse ändern" />
			<g:Label ui:field='kitchenId' ></g:Label>
			<br /><br />
			<g:InlineLabel ui:field='energyLabel' >Energiemix der Küche: </g:InlineLabel>
			<g:TextBox ui:field="energyMixName">Name des Angebots</g:TextBox> verursacht  
			<g:TextBox ui:field="energyMixCO2">0.013</g:TextBox> kg CO2-Äq. / kWh.
			<br /><br />

			<!-- Devices, not used at the moment <c:CellTable addStyleNames='{style.cellTable}' 
			pageSize='15' ui:field='devidesCellTable' /> <g:FlexTable ui:field="deviceTable"></g:FlexTable> 
			<g:Button styleName='{style.buttonDevice}' ui:field="addDevice">Gerät hinzufügen</g:Button> 
			<br /> -->
			Diese Personen können die Küche betreten:
			<c:CellTable addStyleNames='{style.cellTable}' pageSize='100' ui:field='usersCellTable' />

		
			<g:Button styleName='{style.buttonPerson}' ui:field="addPerson">Person
				hinzufügen</g:Button>
			
			</g:HTMLPanel>
		</g:ScrollPanel>
		
		<hr />
		<b:Button text='Küche löschen' ui:field='deleteKitchenButton' />
		<b:Button text='Neue Küche erstellen' ui:field='newKitchenButton' />
		<b:Button text='Küchen speichern, betreten und verlassen' ui:field='exitButton' />
	</g:HTMLPanel>
	

</ui:UiBinder>
