<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:mail='urn:import:ch.eaternity.client'
  xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>



	<ui:style>
	@eval elightgreen ch.eaternity.client.resources.Resources.INSTANCE.constants().elightgreen();
	
  	.box {
		margin:0px 0px 20px 20px;
		padding: 15px;
		background-color: elightgreen;
	}	
	
	.floatRight{
		float:right;
		display:inline;
	}	
	
	.NameLabel {
		font-size:16px;
		font-weight:bold;
		margin-bottom:10px;
	}
	
	.closeButton {
		margin-left:220px;
	}
	
	.SpecificationLabel {
		width: 80px;
		margin-bottom:10px;
		vertical-align:middle;

	}
	
	.SpecificationList {
		width: 200px;
		margin-bottom:8px;
	}
	
	.UnknownExtractionTextBox {}
	
	.kmHTML {
	}

	.CostTextBox {
		width: 60px;
		margin-right:5px;
	}

	
	.CurrencyLabel {}
	
	.CostErrorLabel {}
	
	.questionImage {
		width:40px;
	}
	
	.CoherencePanel{
		border-top:1px solid gray;
		padding:10px;
	}
	.CoherenceHTML {
		position:relative;
		left:20px;
	}
	
  </ui:style>
  
  <ui:style field='ingSpecWidgetStyles'
		type='ch.eaternity.client.ui.widgets.IngredientSpecificationWidget.IngSpecWidgetStyles'>
			.redTextError {
				color: red !important;
			}
	</ui:style>
	
	<ui:with field='res' type='ch.eaternity.client.resources.Resources'/>
  
	<g:HTMLPanel styleName='{style.box}'>	
		<g:HTMLPanel styleName='{style.floatRight}'>
			<b:Close ui:field="closeButton" />
		</g:HTMLPanel>
		
		<g:Label ui:field="NameLabel" styleName='{style.NameLabel}'></g:Label>
		
		<g:HorizontalPanel>
			<g:Label ui:field="SeasonLabel" styleName='{style.SpecificationLabel}'>Saison</g:Label>
			<g:HTML ui:field="SeasonHTML" styleName='{style.SpecificationList}'></g:HTML>
		</g:HorizontalPanel>
		
		<g:HorizontalPanel>
			<g:Label ui:field="ExtractionLabel" styleName='{style.SpecificationLabel}'>Herkunft</g:Label>
			<g:VerticalPanel >
				<g:ListBox ui:field="ExtractionList" styleName='{style.SpecificationList}'></g:ListBox>
				<g:TextBox ui:field="UnknownExtractionTextBox" styleName='{style.UnknownExtractionTextBox}'></g:TextBox>
				<g:HTML ui:field="kmHTML" styleName='{style.kmHTML}'></g:HTML>
			</g:VerticalPanel>
		</g:HorizontalPanel>

		<g:HorizontalPanel>
			<g:Label ui:field="TransportationLabel" styleName='{style.SpecificationLabel}'>Transport</g:Label>
			<g:ListBox ui:field="TransportationList" styleName='{style.SpecificationList}'></g:ListBox>
		</g:HorizontalPanel>

		<g:HorizontalPanel>
			<g:Label ui:field="ProductionLabel" styleName='{style.SpecificationLabel}'>Herstellung</g:Label>
			<g:ListBox ui:field="ProductionList" styleName='{style.SpecificationList}'></g:ListBox>
		</g:HorizontalPanel>

		<g:HorizontalPanel>
			<g:Label ui:field="ConditionLabel" styleName='{style.SpecificationLabel}'>Zustand</g:Label>
			<g:ListBox ui:field="ConditionList" styleName='{style.SpecificationList}'></g:ListBox>
		</g:HorizontalPanel>
		
		<g:HorizontalPanel ui:field='costPanel'>
			<g:Label ui:field="CostLabel" styleName='{style.SpecificationLabel}'>Kosten</g:Label>
			<g:TextBox ui:field="CostTextBox" styleName='{style.CostTextBox}'></g:TextBox>
			<g:Label ui:field="CurrencyLabel" styleName='{style.CurrencyLabel}'> CHF </g:Label>
			<g:Label ui:field="CostErrorLabel" styleName='{style.CostErrorLabel}'></g:Label>
		</g:HorizontalPanel>
		
		<g:HorizontalPanel ui:field='coherencePanel' styleName='{style.CoherencePanel}'>
			<g:Image ui:field='questionImage' resource='{res.questionMark}' styleName='{style.questionImage}'></g:Image>
			<g:HTML ui:field="CoherenceHTML" styleName='{style.CoherenceHTML}'></g:HTML>
		</g:HorizontalPanel>

	</g:HTMLPanel>
</ui:UiBinder>
