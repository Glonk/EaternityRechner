	<ui:with field='res' type='ch.eaternity.client.resources.Resources'/>


<g:DockLayoutPanel unit='EM' ui:field='workspace'>
	<g:north size='4.4'>

		<b:Container>
				<!-- Top Content -->
				
			<rechner:TopPanel ui:field='topPanel' />
			    
		</b:Container>
		
	</g:north>
	<g:center>

	<g:HTMLPanel >
		<b:Container>
			<g:HTMLPanel>
				<div class="{style.contentStart}"><!-- website design code / bootstrap -->
				
				<b:Row>
				
					<b:Column size="4"  >
					<!-- Use Affix to make stuff sticky via gwtbootstrap javascript -->
					<!--  <b:Affix>  -->
						<g:HTMLPanel styleName='{style.sticky}'>
							<g:HTMLPanel ui:field='sidebar' styleName='{style.sidebar}'>
								<g:SimplePanel ui:field='searchPanel' />
							</g:HTMLPanel>
						</g:HTMLPanel>
					<!-- </b:Affix>  -->
					</b:Column>
					<b:Column size="8">
						
							<g:SimplePanel ui:field='recipePanel' styleName='{style.recipePanel}'/>
					
					</b:Column>
					
				</b:Row>
				
				</div>
			</g:HTMLPanel>
		</b:Container>
	</g:HTMLPanel>

	</g:center>
	<g:south size='2'>
		<g:HTMLPanel>
		<footer>
		<b:Container>
				
				<b:Row>
				
				<!-- Footer Content -->
					
					<b:Column size="2"  >
						<g:HTML>
						<h4>&copy; &nbsp;2013 Eaternity</h4>
						</g:HTML>
					</b:Column>
					<b:Column size="3"  >
						<g:HTML>
						<a href="http://eaternity.ch/legal"><h4>Haftbarkeit &amp; Rechtshinweise</h4></a>
						</g:HTML>
					</b:Column>
					
					<b:Column size="3" >
						<g:HTML>
						<a href="/infos/#kontakt"><h4>Kontakt</h4></a>
						</g:HTML>
					</b:Column>
				
				</b:Row>
				
				

			</b:Container>
		</footer>
		</g:HTMLPanel>
	</g:south>

			
</g:DockLayoutPanel>
			

	



</ui:UiBinder>
