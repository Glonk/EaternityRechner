<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:widgets='urn:import:ch.eaternity.client.ui.widgets'
	xmlns:rechner='urn:import:ch.eaternity.client.ui'
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:style>
	@eval edarkgreen ch.eaternity.client.resources.Resources.INSTANCE.constants().edarkgreen();
		.sticky {
			height: 1200px;
		}
		
		.sidebar {
			position: -webkit-sticky;
			position: -moz-sticky;
			position: -ms-sticky;
			position: -o-sticky;
			top: 24px;
			margin: 0 auto;
			border-right: 1px dashed #dfdfdf;
			padding-right: 30px;
			/*
					padding: 18px 18px;  
					border: 1.5px solid #54AA54;
						 
					background: #ffffff;
				
				  -webkit-border-radius: 5px 5px 5px 5px;
				     -moz-border-radius: 5px 5px 5px 5px;
				          border-radius: 5px 5px 5px 5px;
				
				  -webkit-box-shadow: 0 2px 5px rgba(0,0,0,.25);
				     -moz-box-shadow: 0 2px 5px rgba(0,0,0,.25);
				          box-shadow: 0 2px 5px rgba(0,0,0,.25);
				          */
		}
		
		/* The white background content wrapper */
		.contentStart {
			/*	display: none;*/
			padding: 18px 18px;
			margin: 0 auto;
			border: 1.8px solid edarkgreen;
			/*-webkit-border-radius: 10px; -moz-border-radius: 10px; border-radius:10px; border: 1.5px solid #FF8300;*/
			background: #ffffff;
			/*	background: -moz-linear-gradient(top, #FFFFFF 0%, #F4F4F4 100%);
				background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#FFFFFF), color-stop(100%,#F4F4F4));
				filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#FFFFFF', endColorstr='#F4F4F4',GradientType=0 );
				*/
			margin: 0 -20px;
			/* negative indent the amount of the padding to maintain the grid system */
			-webkit-border-radius: 5px 5px 5px 5px;
			-moz-border-radius: 5px 5px 5px 5px;
			border-radius: 5px 5px 5px 5px;
			-webkit-box-shadow: 0 2px 5px rgba(0, 0, 0, .25);
			-moz-box-shadow: 0 2px 5px rgba(0, 0, 0, .25);
			box-shadow: 0 2px 5px rgba(0, 0, 0, .25);
		}
		
		/* -----------------------------------------
		   Vcard
		----------------------------------------- */
		.vcard li {
			list-style-type: none;
			margin-left: -25px;
		}
		
	</ui:style>

	<ui:style field='stickyTop'
		type='ch.eaternity.client.ui.RechnerView.StickyTop'>

		.stickToTop {

     position:fixed;
     top:24px;
     /* 
     needs another method
     
     
     http://stackoverflow.com/questions/9350818/fixed-sidebar-navigation-in-fluid-twitter-bootstrap-2-0 
     k-ohashi -> http://gwtbootstrap.github.io/gwt-bootstrap/apidocs/ AFFIX
     http://html5-demos.appspot.com/static/css/sticky.html
     */
 }



  </ui:style>

	<ui:with field='res' type='ch.eaternity.client.resources.Resources'/>

	<g:ScrollPanel ui:field='workspace'>
      <g:HTMLPanel>
      	
		<b:Container>
			
				<!-- Top Content -->
				
			<rechner:TopPanel ui:field='topPanel' />
			    
			
			<g:HTMLPanel>
				<div class="{style.contentStart}"><!-- website design code / bootstrap -->
				
				<b:Row>
					<b:Column size="4"  >
					<!-- Use Affix to make stuff sticky via gwtbootstrap javascript -->
					<!--  <b:Affix>  -->
						<g:HTMLPanel styleName='{style.sticky}'>
							<g:HTMLPanel ui:field='sidebar' styleName='{style.sidebar}'>
								<g:SimplePanel ui:field='searchPanel' />
							</g:HTMLPanel>
						</g:HTMLPanel>
					<!-- </b:Affix>  -->
					</b:Column>
					<b:Column size="8">
						<g:SimplePanel ui:field='recipePanel' />
					</b:Column>
				</b:Row>
				
				</div>
			</g:HTMLPanel>
		</b:Container>
		
		<footer>
		<b:Container>
				
				<b:Row>
				
				<!-- Footer Content -->
					
					<b:Column size="4"  >
						<g:HTML>
						<h3>&copy; &nbsp;2013 Eaternity</h3>
						<p></p>
						<p><a href="/legal">Haftbarkeit &amp; Rechtshinweise</a></p>
						</g:HTML>
					</b:Column>
					
					<b:Column size="3" >
						<g:HTML>
	
						<h3>Anschrift</h3>
						
						<a href="/infos/#kontakt">
						<ul class="{style.vcard}" style="padding-left:26px">
						    <li style="display:none" class="org">Eaternity</li>
							<li >Viaduktstrasse 93-95</li>
							<li >Im Hub Zürich</li>
						    <li >CH-8005 Zürich</li>
						    <li ><abbr title="Telefon">P:</abbr> +41 77-44-66-981</li>
							<li style="display:none"><a href="mailto:info@eaternity.ch">info@eaternity.ch</a></li>
						</ul>
						</a>
						</g:HTML>
					</b:Column>
				
				</b:Row>
				
				

			</b:Container>
		</footer>

			
			
		</g:HTMLPanel>
	</g:ScrollPanel>



</ui:UiBinder>
