<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:widgets='urn:import:ch.eaternity.client.ui.widgets'
	xmlns:rechner='urn:import:ch.eaternity.client.ui'
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:style>
		.sidebar {
		

		}
	</ui:style>

	<ui:style field='stickyTop'
		type='ch.eaternity.client.ui.RechnerView.StickyTop'>

		.stickToTop {
		 position:fixed;top:24px;
		}

  </ui:style>


	<g:ScrollPanel ui:field='workspace'>
      <g:HTMLPanel>

		<header>
		<b:Container>
		
			<b:Row>
				<b:Column size="3">
					<g:HTMLPanel>
					<a href="http://www.eaternity.ch">
					<img class="logo" src="http://dl.dropbox.com/u/1214503/eaternity-assets/images/generic/logo-eaternity-small_04-11-2010.png" />
					</a>
					</g:HTMLPanel>
				</b:Column>
				<b:Column size="9">
				<g:HTMLPanel>
				<br /><br />
				</g:HTMLPanel>
				</b:Column>
			</b:Row>

			<b:Row>
			    <b:Column size="9" offset="3">
			    	<rechner:TopPanel ui:field='topPanel' />
				</b:Column>
			</b:Row>
		
		</b:Container><!-- container -->
		</header>
		
		<b:Container>
		<g:HTMLPanel>
			<div class="page content-start"><!-- website design code / bootstrap -->
			
				

				
			
			<b:Row>
				<b:Column size="4" >
				<g:HTMLPanel>
					<g:HTMLPanel ui:field='sidebar' styleName='{style.sidebar}'>
						<g:SimplePanel ui:field='searchPanel' />
					</g:HTMLPanel>
					constant content
				</g:HTMLPanel>
				</b:Column>
				<b:Column size="8">
					<g:SimplePanel ui:field='recipePanel' />
				</b:Column>
			</b:Row>
		
		
			</div>
			</g:HTMLPanel>
		</b:Container>
		</g:HTMLPanel>
	</g:ScrollPanel>



</ui:UiBinder>
