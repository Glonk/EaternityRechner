<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:widgets='urn:import:ch.eaternity.client.ui.widgets'
	xmlns:rechner='urn:import:ch.eaternity.client.ui'
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:style>
	@eval edarkgreen ch.eaternity.client.resources.Resources.INSTANCE.constants().edarkgreen();
		
		.recipePanel {
			margin:0px;
			height:100%;
		}
		
		.searchPanel {
			border-right: 2px solid #DFDFDF;
			padding-right: 20px;
		}
		
		
		.fullHeight {
			/*this is for passing full available space to docklayoutpanels */ 
			height:100%;
		}
		
		.container {
			margin-top: 0px;
			margin-bottom: 6px;
		}
		
		/* The white background content wrapper */
		.contentStart {
			/*	display: none;*/
			padding: 20px 20px 17px;
			margin: 0px auto -3px;
			border: 1.8px solid edarkgreen;
			/*-webkit-border-radius: 10px; -moz-border-radius: 10px; border-radius:10px; border: 1.5px solid #FF8300;*/
			background: #ffffff;
			/*	background: -moz-linear-gradient(top, #FFFFFF 0%, #F4F4F4 100%);
				background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#FFFFFF), color-stop(100%,#F4F4F4));
				filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#FFFFFF', endColorstr='#F4F4F4',GradientType=0 );
				*/
			/* negative indent the amount of the padding to maintain the grid system */
			-webkit-border-radius: 5px 5px 5px 5px;
			-moz-border-radius: 5px 5px 5px 5px;
			border-radius: 5px 5px 5px 5px;
			-webkit-box-shadow: 0 2px 5px rgba(0, 0, 0, .25);
			-moz-box-shadow: 0 2px 5px rgba(0, 0, 0, .25);
			box-shadow: 0 2px 5px rgba(0, 0, 0, .25);
		}
		
		/* -----------------------------------------
		   Vcard
		----------------------------------------- */
		.vcard li {
			list-style-type: none;
			margin-left: -25px;
		}
		
	</ui:style>



	<ui:with field='res' type='ch.eaternity.client.resources.Resources'/>


<g:DockLayoutPanel unit='EM' ui:field='workspace'>
	<g:north size='4.4'>
		<b:Container>
				<!-- Top Content -->
				
			<rechner:TopPanel ui:field='topPanel' />
			    
		</b:Container>
	</g:north>
	
	<g:center>
		<b:Container addStyleNames='{style.contentStart}'>  <!-- website design code / bootstrap -->
				
				<b:Row addStyleNames='{style.fullHeight}'>
					<b:Column size="4" addStyleNames='{style.fullHeight}' >

							<g:SimplePanel ui:field='searchPanel' addStyleNames='{style.fullHeight} {style.searchPanel}'/>

					</b:Column>
					<b:Column size="8" addStyleNames='{style.fullHeight}'>
					
							<g:SimplePanel ui:field='recipePanel' addStyleNames='{style.fullHeight} {style.recipePanel}'/>
							
					</b:Column>
				</b:Row>
				

		</b:Container>
	</g:center>

			
</g:DockLayoutPanel>
			

	



</ui:UiBinder>
