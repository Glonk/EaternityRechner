<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:widgets='urn:import:ch.eaternity.client.ui.widgets'
	xmlns:rechner='urn:import:ch.eaternity.client.ui'
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:style>
	    .sticky {
					height: 1000px;
		}
		
		.sidebar {
	
			position: -webkit-sticky;
  			position: -moz-sticky;
  			position: -ms-sticky;
  			position: -o-sticky;
  			top: 24px;
	
			padding: 18px 18px;  
			margin: 0 auto;
			
			border: 1.5px solid #54AA54;
				 
			background: #ffffff;

  -webkit-border-radius: 5px 5px 5px 5px;
     -moz-border-radius: 5px 5px 5px 5px;
          border-radius: 5px 5px 5px 5px;

  -webkit-box-shadow: 0 2px 5px rgba(0,0,0,.25);
     -moz-box-shadow: 0 2px 5px rgba(0,0,0,.25);
          box-shadow: 0 2px 5px rgba(0,0,0,.25);
		}
	</ui:style>

	<ui:style field='stickyTop'
		type='ch.eaternity.client.ui.RechnerView.StickyTop'>

		.stickToTop {

     position:fixed;
     top:24px;
     /* 
     needs another method
     
     
     http://stackoverflow.com/questions/9350818/fixed-sidebar-navigation-in-fluid-twitter-bootstrap-2-0 
     k-ohashi -> http://gwtbootstrap.github.io/gwt-bootstrap/apidocs/ AFFIX
     http://html5-demos.appspot.com/static/css/sticky.html
     */
 }



  </ui:style>


	<g:ScrollPanel ui:field='workspace'>
      <g:HTMLPanel>
		<b:Container>
			<b:Row>
			    <rechner:TopPanel ui:field='topPanel' />
			</b:Row>
			<g:HTMLPanel>
				<div class="page content-start"><!-- website design code / bootstrap -->
				
				<b:Row>
					<b:Column size="4"  >
						<g:HTMLPanel styleName='{style.sticky}'>
							<g:HTMLPanel ui:field='sidebar' styleName='{style.sidebar}'>
								<g:SimplePanel ui:field='searchPanel' />
							</g:HTMLPanel>
						</g:HTMLPanel>
					</b:Column>
					<b:Column size="8">
						<g:SimplePanel ui:field='recipePanel' />
					</b:Column>
				</b:Row>
				
				</div>
			</g:HTMLPanel>
			</b:Container>
		</g:HTMLPanel>
	</g:ScrollPanel>



</ui:UiBinder>
