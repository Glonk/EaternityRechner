<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>

	<ui:style>
		.indikator {
			background: #fff;
			clear: both;
		}
		
		.prepare {
			float: right;
			margin-top: -4px;
			margin-right: 24px;
			color: black;
			text-decoration: underline;
			cursor: pointer;
			cursor: hand;
		}
		
		.statusInfo {
			color: #fff;
			margin: 0px 0px 0px 4px;
			font-size: 0.9em;
			display: inline;
		}
		
		.detailText {
			margin: 0px 10px 0px 10px;
		}
		
		.closeButton {
			display: inline;
		}
		
		.floatRight {
			float: right;
			display: inline;
		}
		
		.savePanel {
			padding: 3px;
			display: block;
			width: 740px;
			clear: both;
			text-align: right;
			margin-top: -20px;
		}
		
		.inline {
			display: inline;
		}
		
		.inline2 {
			display: inline;
			width: 380px;
			background: #ccc;
			float: left;
		}
		
		.hideOverflow { /* overflow:hidden; */
			padding-top: 10px;
			vertical-align: top;
		}
		
		.rezeptDecoration {
			width: 750px;
			padding: 7px;
		}
		
		.cookingInstr {
			margin-left: 6px;
			height: 114px;
			width: 200px;
			/* display:inline; */
			margin-top: 0px;
			margin-bottom: 0px;
			resize: none;
			background: #F7A959;
			border: 1px solid #323533;
		}
		
		.menuDecoPanel {
			width: 340px;
		}
		
		.rezeptNameTop {
			width: 220px;
			padding-left: 5px;
			margin-right: 6px;
			font-size: 14px;
			font-weight: bold;
			height: 22px;
			text-align: left;
		}
		
		.rezeptNameTop2 {
			width: 355px;
			padding-left: 4px;
			margin-left: 1px;
			font-size: 14px;
			font-weight: bold;
			height: 20px;
			text-align: left;
			border: 0px;
			color: white;
			background: #323533;
		}
		
		.recipePersonsBox {
			background: #F7A959;
			border: 1px solid #323533;
			font-size: 14px;
			font-weight: bold;
			text-align: right;
			width: 1.4em;
		}
		
		.rezeptSubTitleTop {
			float: left;
			width: 220px;
			padding-left: 6px;
			margin-right: 25px;
			font-size: 13px;
			height: 14px;
			text-align: left;
		}
		
		.rezeptSubTitleTop2 {
			height: 18px;
			width: 238px;
			padding-left: 4px;
			margin-bottom: 30px;
			font-size: 13px;
			background: #F7A959;
			text-align: left;
			border: 0px;
		}
		
		.closeButton {
			margin-top: -14px;
		}
		
		.recipeTitle {
			background: #323533;
			color: #fff;
			width: 360px;
			margin-left: 10px;
		}
		
		.recipePersons { /* margin-right:10px; */
			width: 120px;
			text-align: right;
			display: inline;
		}
		
		.recipeSmallDetail {
			margin-left: 10px;
			height: 10px;
			background: none;
		}
		
		.SavePanel {
			float: left;
			clear: both;
		}
		
		.SuggestTable {
			float: left;
			clear: both;
			text-align: left;
			background: #323533;
			color: #fff;
		}
		
		.CommentTable {
			float: left;
			clear: both;
			text-align: left;
			border: 1px;
		}
		
		.rezeptDateField {
			padding-left: 4px;
			background: #F9C88C;
			text-align: left;
			border: 0px;
		}
		
		.recipeDateError {
			color: red;
			margin-left: 10px;
		}
		
		.MenuTableWrapper {
			background: #F9C88C;
			margin: 15px 15px 0px 10px;
		}
		
		.MenuTable {
			width: 360px;
			cursor: pointer;
			cursor: hand;
		}
		
		.MenuTable tr {
			
		}
		
		.gwt-Button {
			margin: -1px -1px 0px 0px;
			padding: 2px 5px 3px 5px;
			text-decoration: none;
			/* cursor: pointer;
																						cursor: hand;*/
			cursor: default;
			font-size: 11px;
			color: #000;
			background: url("hborder.png") repeat-x 0px -27px;
			border: 1px solid #787878;
			/* border-bottom: 1px solid #a0a0a0;*/
			border-radius: 4px;
			-moz-border-radius: 4px;
		}
		
		.gwt-Button:active { /* border: 1px inset #fff; */
			border: 1px solid #787878;
			background: url("hborder.png") repeat-x 0px -1455px;
		}
		
		.gwt-Button:hover {
			border-color: #787878;
		}
		
		.gwt-Button[disabled] {
			cursor: default;
			color: #888;
		}
		
		.gwt-Button[disabled]:hover {
			border: 1px outset #ccc;
		}
		.codeImage {
			height:150px;
		}
	</ui:style>

	<ui:style field='selectionStyleRow'
		type='ch.eaternity.client.ui.RecipeEdit.SelectionStyleRow'>
			.selectedRow td {
				background: #fff;
			}
		</ui:style>

	<ui:style field='evenStyleRow'
		type='ch.eaternity.client.ui.RecipeEdit.EvenStyleRow'>
			.evenRow {
				background: #FEE6C6;
			}
	</ui:style>
		
		
		<g:AbsolutePanel ui:field="dragArea">
			<g:VerticalPanel styleName='{style.rezeptDecoration}'>
				<g:VerticalPanel ui:field='alertPanel'></g:VerticalPanel>
				<!-- Close Recipe Button -->
				<g:HTMLPanel styleName='{style.floatRight}'>
					<b:Close ui:field="closeRecipe" />
				</g:HTMLPanel>

				<g:HorizontalPanel>
					<g:VerticalPanel>
						<!-- title of the recipe -->
						<g:TextBox ui:field="RezeptName" styleName='{style.rezeptNameTop2}'>Ihr Menu</g:TextBox>

						<!-- sub-title of the recipe -->
						<g:HTMLPanel styleName='{style.recipeSmallDetail}'>
							<g:TextBox ui:field="rezeptDetails" styleName='{style.rezeptSubTitleTop2}'>Menu
								Beschreibung</g:TextBox>
						</g:HTMLPanel>
					</g:VerticalPanel>

					<!-- CO2 Value -->
					<g:Label ui:field="co2valueLabel">0</g:Label>
					<g:Label>g/p.P.</g:Label>
				</g:HorizontalPanel>

				<!-- image and description here? any particular design choices -->
				<g:HTML ui:field='codeImage' styleName='{style.codeImage}'></g:HTML>
				<g:HorizontalPanel ui:field='imageWidgetPanel'></g:HorizontalPanel>

				<g:HorizontalPanel>
					<g:HTMLPanel styleName='{style.recipePersons}'>
						für
						<g:TextBox ui:field="amountPersons" styleName='{style.recipePersonsBox}'>4</g:TextBox>
						Personen
					</g:HTMLPanel>
					<g:CheckBox ui:field="makePublic">veroeffentlichen</g:CheckBox>
				</g:HorizontalPanel>

				<!-- Cooking Date -->
				<g:HorizontalPanel>
					<g:HTML>Datum: </g:HTML>
					<g:TextBox ui:field="recipeDate" styleName="{style.rezeptDateField}">TT/MM/JJ</g:TextBox>
					<g:HTML ui:field="recipeDateError" styleName="{style.recipeDateError}"></g:HTML>
				</g:HorizontalPanel>

				<g:HorizontalPanel styleName='{style.hideOverflow}' ui:field='addInfoPanel'>

					<!-- ingredients list -->
					<g:VerticalPanel ui:field='MenuTableWrapper'
						styleName='{style.MenuTableWrapper}'>
						<g:HTMLPanel>
							<img src='tabs-bg.png' height='88px' width='1px' style='float:left;' />
							<g:FlexTable ui:field='MenuTable' styleName='{style.MenuTable}'
								cellSpacing='0' cellPadding='0' />
						</g:HTMLPanel>
						<g:FlexTable ui:field='SuggestTable' styleName='{style.SuggestTable}'
							cellSpacing='0' cellPadding='0' />
					</g:VerticalPanel>

				</g:HorizontalPanel>
				<g:Label>Kochanleitung:</g:Label>
				<g:TextArea styleName='{style.cookingInstr}' ui:field="cookingInstr">Kochanleitung</g:TextArea>

				<g:FlexTable ui:field='commentTable' styleName='{style.CommentTable}'
					cellSpacing='2' cellPadding='2' />
					
				<g:Anchor styleName='{style.prepare}' ui:field="PreparationButton"
					text="Zubereitung hinzufügen" />
					
				<g:CheckBox ui:field="preparationFactor">Zubereitungsfaktor hinzufuegen</g:CheckBox>
				
				<g:HorizontalPanel>
					<g:Label>In Sammlungen:</g:Label>
					<g:FlowPanel ui:field ="collectionPanel"></g:FlowPanel>
				</g:HorizontalPanel>
				<g:HTML ui:field="bottomIndikator" styleName='{style.indikator}'></g:HTML>
				
				<g:FlowPanel>
					<b:Button ui:field="newRecipeButton">Neues Rezept</b:Button>
					<b:Button ui:field="generatePDFButton">PDF generieren</b:Button>
					<b:Button ui:field="publishButton">veröffentlichen</b:Button>
					<b:Button ui:field="deleteButton">löschen</b:Button>
					<b:Button ui:field="duplicateButton">duplizieren</b:Button>
					<b:Button ui:field="saveButton">speichern</b:Button>
				</g:FlowPanel>
			</g:VerticalPanel>
	</g:AbsolutePanel>
</ui:UiBinder>