<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:widgets='urn:import:ch.eaternity.client.ui.widgets'
	xmlns:c='urn:import:com.google.gwt.user.cellview.client'
	xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
	xmlns:b2='urn:import:com.github.gwtbootstrap.datepicker.client.ui'>

	<ui:style>
		
		.fullHeight {
			height:100%;
		}
		
		.wholePanel {

		}
		.LabelBox {
			height:5.5em;

		}
	
		
		.floatRight{
			float:right;
	
		}	
		
		.co2Image {
			float:left;
		}
		
		.co2valueLabel {
			font-size:40px;
			font-weight:bold;
			margin: 30px 0px 0px 15px;
			float:left;
		}
		
		.co2valueLabelPerson {
			margin-top:22px;
			margin-left:15px;
			font-size:1.1em;
			color:darkgray;
			float:left;
			text-align:left;	
		}
		
		.recipeTitle {
			
			width: 100%;
			font-size: 24px;
			font-weight: bold;
			text-align: left;
		}
		
		.recipeSubTitle {
			
			width: 100%;
			font-size: 12px;
			text-align: left;
		}
		
		.recipeImage {
			margin-bottom:15px;

		}
		
		.imageUploadWidgetPanel {
			
		}
		
		.personsHTML {
			float:left;
		}
		
		.recipePersonsBox {
			background: #F7A959;
			border: 1px solid #323533;
			font-size: 14px;
			font-weight: bold;
			text-align: right;
			width: 1.4em;
		}
		

		
		.ingredientPanel {
			margin-top:30px;
		}
		
		.ingredientList {
			width: 3px;
			cursor: pointer;
			cursor: hand;
		}
		
		.sumNameLabel {
			margin-right:200px;
		}
		
		.eastPanel {
			margin-left:20px;
		}
		
		.ingSpecWidget {
			/*float:right; uncomment that for div layouting... */
			z-index:100;
			/* for the overflow 
			margin-left:-200px; */
		}
		
		.recipeProperties {
			margin-top:12px;
			margin-bottom:30px;
		}
		
		.locationLabel {
			width:250px;
			margin:auto;
		}

		
		.recipeDateBox {
			float:right;
			width: 150px;
		}
		
		.preparationDisclosurePanel {
			width:100%;
		}
		
		.preparationDisclosurePanel .content  {
			height:100%;
		}
		
		.arrowImage {}
		
		@external .header;
		.header:hover {
			background-color: #F0F4C2;
		}
		
		.header {
			padding:8px;
			margin-bottom:10px;
		}
		

		.cookingInstrLabel {
			font-weight:600;
			display:inline;
		}
		
		.cookingInstr {
			background-color: #F0F4C2;
			/* don't know why is like that otherwise its too big*/
			width:94%;
			height:250px;
		}
		
		.CommentTable {
			text-align: left;
			border: 1px;
		}
		
		.cellTable { }
	

		.buttons {
			margin-right:10px;
			margin-top:18px;
		}
		
	</ui:style>

	
	<ui:style field='styles' type='ch.eaternity.client.ui.RecipeEdit.Styles'>
			.redTextError {
				color: red !important;
			}
	</ui:style>
	
	<ui:with field='res' type='ch.eaternity.client.resources.Resources'/>
		
	
<g:DockLayoutPanel unit='EM' addStyleNames='{style.fullHeight}'>
	<g:north size='17'>
		<g:HTMLPanel>
			<g:VerticalPanel ui:field='alertPanel'></g:VerticalPanel>
		
			<!-- Close Recipe Button -->
			<g:DockLayoutPanel unit='EM' styleName='{style.LabelBox}'>
				<g:east size='20'>
					<g:HTMLPanel styleName='{style.floatRight}'>
						<b:Close ui:field="closeRecipe" addStyleNames='{style.floatRight}' />
						<g:Image ui:field="co2Image" styleName='{style.co2Image}'></g:Image>
						<g:Label ui:field="co2valueLabel" styleName='{style.co2valueLabel}'>0</g:Label>
						<div class='{style.co2valueLabelPerson}'>CO2<br /> pro Person</div>
						
					</g:HTMLPanel>
				</g:east>
				<g:center>
					<b:Row>
						<b:Column size="4">
						<g:HTMLPanel >
							<!-- title of the recipe -->
							<b:TextBox ui:field="RezeptName"  addStyleNames='{style.recipeTitle}'></b:TextBox>
					
							<!-- sub-title of the recipe -->
							<b:TextBox ui:field="rezeptDetails"  addStyleNames='{style.recipeSubTitle}'></b:TextBox>
						</g:HTMLPanel>
						</b:Column>
					</b:Row>
				</g:center>
			</g:DockLayoutPanel>
			<!-- image  -->
			<g:Image ui:field='recipeImage' styleName='{style.recipeImage}'></g:Image>
			<g:HorizontalPanel>
				<g:SimplePanel ui:field='imageUploadWidgetPanel' styleName='{style.imageUploadWidgetPanel}'></g:SimplePanel>
				<b:Tooltip text='Bild löschen'><g:Image ui:field='deleteImage' resource='{res.deleteLarge}'></g:Image></b:Tooltip>
			</g:HorizontalPanel>
		
			<g:HTMLPanel styleName='{style.recipeProperties}'>
				<b2:DateBox format="dd. MM yyyy" autoClose="true" ui:field='recipeDateBox' styleName='{style.recipeDateBox}' />
				
				<g:HTMLPanel styleName='{style.personsHTML}'>
					für <b:TextBox ui:field="amountPersons" styleName='{style.recipePersonsBox}' /> Personen
				</g:HTMLPanel>
				
				<g:Label ui:field='locationLabel' styleName='{style.locationLabel}'>Ort:</g:Label>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:north>
	
	<g:center>
		<c:DataGrid ui:field='ingredientDataGrid' addStyleNames='{style.cellTable}'/>
	</g:center>
	


	
	<g:south size='3.5'>
		<g:HTMLPanel>
			<g:FlexTable ui:field='commentTable' styleName='{style.CommentTable}'
				cellSpacing='2' cellPadding='2' />
				
			<!--  
			<g:CheckBox ui:field="preparationFactor">Zubereitungsfaktor hinzufuegen</g:CheckBox>
			
			<g:HorizontalPanel>
				<g:Label>In Sammlungen:</g:Label>
				<g:FlowPanel ui:field ="collectionPanel"></g:FlowPanel>
			</g:HorizontalPanel>
			-->
			
			<g:HTMLPanel>
				<b:Button ui:field="newRecipeButton" addStyleNames='{style.buttons}'>Neues Rezept</b:Button>
				<b:Button ui:field="generatePDFButton" addStyleNames='{style.buttons}'>PDF generieren</b:Button>
				<b:Button ui:field="publishButton" addStyleNames='{style.buttons}'>veröffentlichen</b:Button>
				<b:Button ui:field="deleteButton" addStyleNames='{style.buttons}'>löschen</b:Button>
				<b:Button ui:field="duplicateButton" addStyleNames='{style.buttons}'>duplizieren</b:Button>
				<b:Button ui:field="saveButton" addStyleNames='{style.buttons}'>speichern</b:Button>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:south>
	
	<g:east size='20'>
		<g:HTMLPanel styleName='{style.eastPanel}'>
			<g:DisclosurePanel ui:field='preparationDisclosurePanel' styleName='{style.preparationDisclosurePanel}' >
				<g:customHeader>
					<g:HTMLPanel>
						<g:Image ui:field='arrowImage' resource='{res.arrowSort}' addStyleNames='{style.arrowImage} {res.style.rotate90}'></g:Image>
						<g:Label styleName='{style.cookingInstrLabel}'>Zubereitung</g:Label>
					</g:HTMLPanel>
				</g:customHeader>
				<g:TextArea styleName='{style.cookingInstr}' ui:field="cookingInstr"></g:TextArea>
			</g:DisclosurePanel>
			
			<widgets:IngredientSpecificationWidget ui:field="ingSpecWidget" addStyleNames='{style.ingSpecWidget}'/>
		</g:HTMLPanel>
	</g:east>

</g:DockLayoutPanel>
</ui:UiBinder>