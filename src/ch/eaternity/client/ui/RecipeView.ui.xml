<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:rechner='urn:import:ch.eaternity.client.ui.widgets'
	xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>

	<ui:style>
		.fullHeight {
			height:100%;
		}
		
		.addButton {
			height: 40px;
			width: 100%;
			margin: 0px;
			padding-left:80px;
			text-align:left;
			text-decoration: none;
			cursor: pointer;
			cursor: hand;
			font-size:20px; 
			font-weight:600;
			color:#222;
			background-color: #ebebeb;
			margin-bottom: 5px;
			border: none;
		}
		
		.addButton:hover {
			background-color: lightgray;
		}
		
		.recipeScrollPanel {
			margin-top:10px;
		}
		
	</ui:style>

	<g:DockLayoutPanel unit='EM' addStyleNames='{style.fullHeight}'>
		<g:north size='3'>
			<g:Button ui:field="addRecipeButton" styleName='{style.addButton}'>+ neues Rezept</g:Button>
		</g:north>
		<g:center>
			<g:ScrollPanel ui:field="recipeScrollPanel" styleName='{style.recipeScrollPanel}'/>
		</g:center>
		<g:south size="0">
			<g:HorizontalPanel>
				<g:Button ui:field="addToCollectionButton">zu Sammlung hinzufuegen</g:Button>
				<g:Button ui:field="generateReportButton">Report generieren</g:Button>
			</g:HorizontalPanel>
		</g:south>
	</g:DockLayoutPanel>

</ui:UiBinder>
