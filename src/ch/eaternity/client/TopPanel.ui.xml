<!DOCTYPE ui:UiBinder 
  SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"
>
<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:mail='urn:import:ch.eaternity.client'>


  <ui:style>
  .statusDiv {
    text-align: right;
    padding:0.5em 1em 1.5em 1em;
    background:#fff;
    border-bottom: 2.5px solid #bbb;
  }

  .linksDiv {
    text-align: right;
  }
  
  .statusInfo{
  	float: left;
  	 text-align: left;
  	}

  </ui:style>
  

  <g:HTMLPanel>


    <div class="{style.statusDiv}">


	
      <div class="{style.statusInfo}">
	  	<g:Label ui:field='loadingLabel' >Datenbank wird geladen...</g:Label>
        <g:InlineLabel ui:field='loginLabel' ></g:InlineLabel>
        <a href="mailto:info@eaternity.ch">Kontaktieren Sie uns.</a>
        
      </div>

      <div class='{style.linksDiv}'>

        <g:InlineLabel ui:field='locationLabel' >Sie befinden sich in: </g:InlineLabel>
        <g:TextBox ui:field="clientLocation">Schweiz</g:TextBox>
          <g:Button ui:field="locationButton" text="Adresse festlegen"/>
           <g:InlineLabel>Sie kochen im Monat: </g:InlineLabel>
      	<g:ListBox ui:field="Monate">
		</g:ListBox>
        <g:Anchor href='javascript:;' ui:field='signOutLink'>Abmelden</g:Anchor>
        &nbsp;
        <g:Anchor href='javascript:;' ui:field='signInLink'>Anmelden</g:Anchor>
         &nbsp;
        <g:Anchor href='javascript:;' ui:field='ingredientLink'>Zutaten Konsole</g:Anchor>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
